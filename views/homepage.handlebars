{{#each posts as |post| }}
<div class="row align-center mb-5">
    <div class="col-md-6" id="postContainer">
        <h2>
            <a id="postLink" href="/posts/{{post.id}}">{{post.title}}</a>
            <p>Created by: {{post.user.name}} At:{{format_date post.date}}</p>
        </h2>
    </div>
</div>
{{/each}}